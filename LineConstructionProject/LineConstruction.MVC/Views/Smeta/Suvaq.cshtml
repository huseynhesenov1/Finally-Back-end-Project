@using LineConstruction.BLa.DTOs.SmetaDTO
@model PlasterDTO

<style>
    th, td{
        border: 1px solid black;
        padding: 10px;
    }

    .page-title {
        /* color: var(--default-color); */
        background: url(assets/img/page-title-bg.jpg);
        /* background-color: var(--background-color); */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        padding: 160px 0 60px 0;
        text-align: center;
        position: relative;
    }

        .page-title:before {
            content: "";
            background-color: color-mix(in srgb, var(--background-color), transparent 40%);
            position: absolute;
            inset: 0;
        }
</style>

<div class="page-title dark-background" style="background-image: url(assets/img/page-title-bg.jpg);">
    <div class="container position-relative">
        <h1>Suvaq</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="current">Suvaq</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container d-flex justify-content-center mt-5" style="flex-direction: column; width:40%;">
    <img height="250px" width="100%" src="~/smeta/suvaqfon.jpeg" />

    <form method="post">
        <div class="mb-3">
            <h4>Divarın sahəsi(m <sup style="font-size: 0.8rem">2</sup> ) :</h4>
            <input asp-for="Sahe" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <h4>Divarın qalinliğı (sm): </h4>
            <input asp-for="Qalinliq" type="text" class="form-control" />
        </div>
        <div>
            <span class="text-danger">@Html.ValidationSummary()</span>
        </div>
        <button type="submit" class="btn btn-warning">Hesabla</button>
    </form>
    <h5 class="mt-3">Ümumi xərc : @((ViewBag.IscininQiymeti != null ? ViewBag.IscininQiymeti : "-") + (ViewBag.SementQiymeti != null ? ViewBag.SementQiymeti : "-") + (ViewBag.QumQiymeti != null ? ViewBag.QumQiymeti : "-"))</h5>
    <table style="border-collapse: collapse; border: 1px solid black" class="mt-4 mb-5">
        <tr>
            <th>Material</th>
            <th>Miqdar</th>
            <th>Vahid</th>
            <th>Qiymət</th>
        </tr>
        <tr>
            <td>Sement</td>
            <td>@(ViewBag.SementMiqdari != null ? ViewBag.SementMiqdari : "-")</td>
            <td>kisə</td>
            <td>@(ViewBag.SementQiymeti != null ? ViewBag.SementQiymeti : "-")</td>
        </tr>
        <tr>
            <td>Qum</td>
            <td>@(ViewBag.QumMiqdari != null ? ViewBag.QumMiqdari : "-")</td>
            <td>m<sup>3</sup></td>
            <td>@(ViewBag.QumQiymeti != null ? ViewBag.QumQiymeti : "-")</td>
        </tr>
        <tr>
            <th>İş</th>
            <th>İş həcmi</th>
            <th>Vahid</th>
            <th>Qiymət</th>
        </tr>
        <tr>
            <td>Suvaq vurmaq</td>
            <td>@(ViewBag.IsinHecmi != null ? ViewBag.IsinHecmi : "-")</td>
            <td>m<sup>2</sup></td>
            <td>@(ViewBag.IscininQiymeti != null ? ViewBag.IscininQiymeti : "-")</td>
        </tr>
    </table>
</div>
