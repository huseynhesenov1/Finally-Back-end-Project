

<style>

	.page-title {
		background: url(/assets/img/page-title-bg.jpg);
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		padding: 160px 0 60px 0;
		text-align: center;
		position: relative;
	}

		.page-title:before {
			content: "";
			background-color: rgba(0, 0, 0, 0.4);
			position: absolute;
			inset: 0;
		}

    .progress-bar {
        height: 5px;
        background-color: #4CAF50;
        width: 0;
        animation: loadProgress 1.5s ease-out forwards;
    }

    keyframes loadProgress {
        from

    {
        width: 0;
    }

    to {
        width: 100%;
    }

    }
</style>
<main>
	<div class="page-title">
		<div class="container position-relative">
			<h1 style="color: white">OrderSucces</h1>
			<nav class="breadcrumbs">
				<ol>
					<li><a asp-controller="Home" asp-action="Index">Home</a></li>
					<li style="color: white" class="current">OrderSucces</li>
				</ol>
			</nav>
		</div>
	</div>
	</main>

@{
    ViewData["Title"] = "Ödəniş Uğurlu";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ödəniş Uğurlu</title>
    <script src="https://cdn.tailwindcss.com"></script>
    
</head>
<div class="bg-gray-100 flex items-center justify-center h-screen">

    <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-md text-center">
        <div class="progress-bar"></div>

        <div class="mt-6 flex justify-center">
            <svg class="w-16 h-16 text-green-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
            </svg>
        </div>

        <h2 class="text-xl font-semibold mt-4 text-gray-800">Ödəniş Uğurla Tamamlandı!</h2>
        <p class="text-gray-600 mt-2">Sizin sifarişiniz uğurla yaradıldı və təsdiqləndi.</p>

        <div class="mt-4 bg-gray-100 p-4 rounded-lg text-left text-gray-700">
        </div>

        <div class="mt-6 flex flex-col gap-3">
            <a asp-controller="Home" asp-action="Index" class="bg-green-600 text-white py-2 rounded-md shadow hover:bg-green-700 transition">Ana səhifəyə qayıt</a>
        </div>
        
    </div>

</div>
</html>
