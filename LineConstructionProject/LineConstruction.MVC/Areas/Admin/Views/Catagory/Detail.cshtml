@using LineConstruction.Core.Entities
@model Catagory


<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Services Table</h1>


	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>#</th>
							<th>Title</th>
							<th>IsDeleted</th>
							<th>CreateAt</th>
							<th>UpdateAt</th>
							<th>Update</th>
							<th>SoftDelete</th>
							<th>Details</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th>#</th>
							<th>Title</th>
							<th>IsDeleted</th>
							<th>CreateAt</th>
							<th>UpdateAt</th>
							<th>Update</th>
							<th>SoftDelete</th>
							<th>Details</th>
						</tr>
					</tfoot>
					<tbody>
							<tr>
							<td>@Model.Id</td>
							<td>@Model.Title</td>
							<td>@Model.IsDeleted</td>
							<td>@Model.CreateAt</td>
							<td>@Model.UpdateAt</td>
							<td><a asp-area="Admin" asp-controller="Catagory" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Update</a></td>
							<td><a asp-area="Admin" asp-controller="Catagory" asp-action="SoftDelete" asp-route-id="@Model.Id" class="btn btn-danger">SoftDelete</a></td>
							<td><a asp-area="Admin" asp-controller="Catagory" asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-info">Details</a></td>
							</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>
<!-- /.container-fluid -->
