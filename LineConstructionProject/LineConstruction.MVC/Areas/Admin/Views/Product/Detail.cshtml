  @using LineConstruction.Core.Entities
 @model Product


<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Teams Table</h1>


	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>#</th>
							<th>Title</th>
							<th>Description</th>
							<th>ImagePath</th>
							<th>CatagoryId</th>
							<th>OldPrice</th>
							<th>NewPrice</th>
							<th>IsDeleted</th>
							<th>CreateAt</th>
							<th>UpdateAt</th>
							<th>Update</th>
							<th>SoftDelete</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th>#</th>
							<th>Title</th>
							<th>Description</th>
							<th>ImagePath</th>
							<th>CatagoryId</th>
							<th>OldPrice</th>
							<th>NewPrice</th>
							<th>IsDeleted</th>
							<th>CreateAt</th>
							<th>UpdateAt</th>
							<th>Update</th>
							<th>SoftDelete</th>
						</tr>
					</tfoot>
					<tbody>
					


							<tr>
							<td>@Model.Id</td>
							<td>@Model.Title</td>
							<td>@Model.Description</td>
							<td> <img height="100" width="100" src="~/uploads/Product/@Model.ImagePath" alt="Alternate Text" /></td>
							<td>@Model.Catagory.Title</td>
							<td>@Model.OldPrice</td>
							<td>@Model.NewPrice</td>
							<td>@Model.IsDeleted</td>
							<td>@Model.CreateAt</td>
							<td>@Model.UpdateAt</td>
							<td><a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Update</a></td>
							<td><a asp-area="Admin" asp-controller="Product" asp-action="SoftDelete" asp-route-id="@Model.Id" class="btn btn-danger">SoftDelete</a></td>

							</tr>


						

					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>

